#sign_up_modal.modal
 .modal-dialog
 .modal-content
  %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"}
  %i.fa.fa-times-circle
  %h4#SignInModal.title Create an account
  %p Add your details to create an account
 .modal-header
 = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :remote => true, :format => :js, :html => {:class => "form-signin"}) do |f|
  .modal-body
   = f.input :email, :autofocus => true, :label => false, :placeholder => "Email"
   = f.input :password, :label => false, :placeholder => "Password"
   = f.input :password_confirmation, :label => false, :placeholder => "Confirm password"
   = link_to "Already have an account?", new_user_session_path
   %br
   = link_to "Forgot your password?", new_user_password_path
  .footer
   .form-actions
    %a{ :href => "#", "data-dismiss" => "modal" } Cancel
    = f.button :submit, "Create account"